{
    "name": "starlight",
    "version": "0.0.1",
    "author": "Gryffon Bellish <owenbellish@gmail.com>",
    "license": "MIT",
    "scripts": {
        "start:ts": "ts-node ./src/index.ts",
        "prebuild": "npm run lint:fix",
        "build": "tsc",
        "start:js": "node ./dist/index.js",
        "lint": "eslint src --ext .ts",
        "lint:fix": "npm run lint -- --fix"
    },
    "dependencies": {
        "@types/common-tags": "^1.8.0",
        "@types/dotenv": "^6.1.1",
        "@types/moment-duration-format": "^2.2.2",
        "@types/node": "^11.13.6",
        "@types/ws": "^6.0.1",
        "common-tags": "^1.8.0",
        "discord-akairo": "discord-akairo/discord-akairo",
        "discord.js": "discordjs/discord.js",
        "dotenv": "^7.0.0",
        "moment": "^2.24.0",
        "moment-duration-format": "^2.2.2",
        "mongodb": "^3.2.3",
        "node-fetch": "^2.3.0",
        "pg": "^7.10.0",
        "reflect-metadata": "^0.1.13",
        "ts-node": "^8.1.0",
        "turndown": "^5.0.3",
        "typeorm": "^0.2.16",
        "typescript": "^3.4.4",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^1.6.0",
        "@typescript-eslint/parser": "^1.7.0",
        "eslint": "^5.16.0",
        "eslint-config-marine": "^2.0.0"
    },
    "eslintConfig": {
        "extends": "marine/node",
        "rules": {
            "@typescript-eslint/indent": [
                "error",
                4,
                "spaces"
            ],
            "quotes": [
                "error",
                "single"
            ]
        }
    },
    "eslintIgnore": [
        "dist/**"
    ]
}
