{
    "name": "starlight",
    "version": "2.0.0",
    "author": "Gryffon Bellish <owenbellish@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p starlight.json && tsc -p moonlight.json",
        "start:moon": "pm2 start ./moondist/index.js --name moonlight -i 1",
        "start:star": "pm2 start ./stardist/index.js --name starlight -i 1",
        "start:all": "npm run start:moon && npm run start:star",
        "logs": "pm2 logs",
        "stop": "pm2 stop all && pm2 delete all",
        "prebuild": "npm run lint:fix",
        "lint:fix": "npx eslint starsrc --ext .ts --fix && npx eslint moonsrc --ext .ts --fix",
        "lint": "npx eslint src --ext .ts",
        "clean": "rimraf stardist/ moondist/ .cache/"
    },
    "dependencies": {
        "discord.js": "discordjs/discord.js",
        "dotenv": "^8.0.0",
        "fs-nextra": "^0.4.5",
        "klasa": "dirigeants/klasa#settings",
        "kurasuta": "^0.2.18",
        "node-fetch": "^2.6.0",
        "pm2": "^3.5.1",
        "veza": "^0.5.0"
    },
    "devDependencies": {
        "@types/dotenv": "^6.1.1",
        "@types/node": "^12.0.1",
        "@types/node-fetch": "^2.3.3",
        "@types/ws": "^6.0.1",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.6.0",
        "eslint": "^5.16.0",
        "rimraf": "^2.6.3",
        "typescript": "^3.4.5"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.1",
        "erlpack": "discordapp/erlpack",
        "node-opus": "^0.3.1",
        "sodium": "^3.0.2",
        "zlib-sync": "^0.1.4"
    }
}
