{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "discord.js",
            "klasa",
            "node",
            "node-fetch",
            "dotenv"
        ],
        "noEmitOnError": true,
        "strictNullChecks": true,
        "declaration": true,
        "importHelpers": true
    },
    "include": [
        "src"
    ]
}