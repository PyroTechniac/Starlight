{
    "extends": "eslint-config-bamboo",
    "compilerOptions": {
        "outDir": "./dist",
        "listEmittedFiles": true,
        "noImplicitAny": false,
        "declaration": true,
        "baseUrl": "./",
        "paths": {
            "@settings/*": [
                "src/lib/settings/*"
            ],
            "@structures/*": [
                "src/lib/structures/*"
            ],
            "@utils/*": [
                "src/lib/util/*"
            ],
            "@typings/*": [
                "src/lib/typings/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}